<Page x:Class="MidiavoxChat.Pages.HostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MidiavoxChat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HostPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="11*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Voltar" Click="BackToStartingPage" MaxHeight="40" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Grid.Row="1" x:Name="waitingForConnectionLabel" Content="Test" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 50"/>
    </Grid>
</Page>
